<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TuApp.InicioPage"
             BackgroundColor="#f7f7f7">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="20">

            <Frame Padding="20" CornerRadius="15" BackgroundColor="White" HasShadow="True">
                <VerticalStackLayout Spacing="10" HorizontalOptions="Center">
                    <Image 
                        Source="perfil.png"
                        WidthRequest="100"
                        HeightRequest="100"
                        Aspect="AspectFill"
                        HorizontalOptions="Center"
                        VerticalOptions="Center"
                        Margin="0,10"/>

                    <Label x:Name="lblBienvenida"
                           FontSize="24"
                           FontAttributes="Bold"
                           TextColor="#333"
                           HorizontalOptions="Center"/>
                </VerticalStackLayout>
            </Frame>

            <Frame Padding="15" CornerRadius="10" BackgroundColor="#fff" HasShadow="True">
                <VerticalStackLayout Spacing="8">
                    <Label Text="📧 Correo:"
                           FontAttributes="Bold"
                           TextColor="#444"/>
                    <Label x:Name="lblCorreo" TextColor="#555"/>

                    <Label Text="🏠 Dirección:"
                           FontAttributes="Bold"
                           TextColor="#444"/>
                    <Label x:Name="lblDireccion" TextColor="#555"/>

                    <Label Text="🎂 Fecha de nacimiento:"
                           FontAttributes="Bold"
                           TextColor="#444"/>
                    <Label x:Name="lblFechaNacimiento" TextColor="#555"/>

                    <Label Text="🆔 Tipo de usuario:"
                           FontAttributes="Bold"
                           TextColor="#444"/>
                    <Label x:Name="lblTipoUsuario" TextColor="#555"/>
                </VerticalStackLayout>
            </Frame>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
