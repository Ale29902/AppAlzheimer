<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TuApp.Vistas.ConfiguracionPacientePage"
             BackgroundColor="Transparent"
             NavigationPage.HasNavigationBar="False">
    <!-- Fondo degradado -->
    <ContentPage.Background>
        <LinearGradientBrush EndPoint="1,1">
            <GradientStop Color="#5e1675" Offset="0.0" />
            <GradientStop Color="#9333ea" Offset="0.5" />
            <GradientStop Color="#3b0764" Offset="1.0" />
        </LinearGradientBrush>
    </ContentPage.Background>

    <!-- Recursos y estilos -->
    <ContentPage.Resources>
        <ResourceDictionary>
            <Style x:Key="MenuTileButtonStyle" TargetType="Button">
                <Setter Property="BackgroundColor" Value="#e0cdff" />
                <Setter Property="TextColor" Value="#3b0764" />
                <Setter Property="FontAttributes" Value="Bold" />
                <Setter Property="CornerRadius" Value="15" />
                <Setter Property="HeightRequest" Value="60" />
                <Setter Property="FontSize" Value="16" />
                <Setter Property="Margin" Value="0,8" />
                <Setter Property="Padding" Value="15,0" />
            </Style>

            <Style x:Key="LogoutButtonStyle" TargetType="Button">
                <Setter Property="BackgroundColor" Value="#ff5e8a" />
                <Setter Property="TextColor" Value="White" />
                <Setter Property="FontAttributes" Value="Bold" />
                <Setter Property="CornerRadius" Value="15" />
                <Setter Property="HeightRequest" Value="60" />
                <Setter Property="FontSize" Value="16" />
                <Setter Property="Margin" Value="0,25,0,8" />
                <Setter Property="Padding" Value="15,0" />
            </Style>

            <Style x:Key="TitleLabelStyle" TargetType="Label">
                <Setter Property="FontSize" Value="28" />
                <Setter Property="FontAttributes" Value="Bold" />
                <Setter Property="TextColor" Value="White" />
                <Setter Property="HorizontalTextAlignment" Value="Center" />
                <Setter Property="Margin" Value="0,0,0,20" />
            </Style>
        </ResourceDictionary>
    </ContentPage.Resources>

    <ScrollView>
        <VerticalStackLayout Padding="30" Spacing="20" VerticalOptions="Center">
            <!-- Botón de Inicio -->
            <Button Text="Inicio"
                    Clicked="RegresarInicio_Clicked"
                    TextColor="White"
                    BackgroundColor="Transparent"
                    FontSize="32"
                    FontAttributes="Bold"
                    HorizontalOptions="Start"
                    Margin="0,40,0,20"
                    Padding="0">
                <VisualStateManager.VisualStateGroups>
                    <VisualStateGroup x:Name="CommonStates">
                        <VisualState x:Name="Normal" />
                        <VisualState x:Name="Pressed">
                            <VisualState.Setters>
                                <Setter Property="Scale" Value="0.95" />
                                <Setter Property="Opacity" Value="0.8" />
                            </VisualState.Setters>
                        </VisualState>
                    </VisualStateGroup>
                </VisualStateManager.VisualStateGroups>
            </Button>

            <!-- Título -->
            <Label Text="Configuración"
                   Style="{StaticResource TitleLabelStyle}" />

            <!-- Botones de Configuración -->
            <Frame BackgroundColor="#4e186a"
                   CornerRadius="20"
                   Padding="20"
                   HasShadow="True"
                   Margin="0,10,0,20">
                <VerticalStackLayout Spacing="15">
                    <Button Text="Editar PIN"
                            Style="{StaticResource MenuTileButtonStyle}"
                            Clicked="EditarPin_Clicked">
                        <Button.Shadow>
                            <Shadow Brush="#000000"
                                    Offset="0,3"
                                    Radius="6"
                                    Opacity="0.2" />
                        </Button.Shadow>
                        <VisualStateManager.VisualStateGroups>
                            <VisualStateGroup x:Name="CommonStates">
                                <VisualState x:Name="Normal" />
                                <VisualState x:Name="Pressed">
                                    <VisualState.Setters>
                                        <Setter Property="BackgroundColor" Value="White" />
                                        <Setter Property="Scale" Value="0.98" />
                                    </VisualState.Setters>
                                </VisualState>
                            </VisualStateGroup>
                        </VisualStateManager.VisualStateGroups>
                    </Button>

                    <Button Text="Crear PIN"
                            Style="{StaticResource MenuTileButtonStyle}"
                            Clicked="GenerarPin_Clicked">
                        <Button.Shadow>
                            <Shadow Brush="#000000"
                                    Offset="0,3"
                                    Radius="6"
                                    Opacity="0.2" />
                        </Button.Shadow>
                        <VisualStateManager.VisualStateGroups>
                            <VisualStateGroup x:Name="CommonStates">
                                <VisualState x:Name="Normal" />
                                <VisualState x:Name="Pressed">
                                    <VisualState.Setters>
                                        <Setter Property="BackgroundColor" Value="White" />
                                        <Setter Property="Scale" Value="0.98" />
                                    </VisualState.Setters>
                                </VisualState>
                            </VisualStateGroup>
                        </VisualStateManager.VisualStateGroups>
                    </Button>

                    <Button Text="Eliminar PIN"
                            Style="{StaticResource MenuTileButtonStyle}"
                            Clicked="EliminarPin_Clicked">
                        <Button.Shadow>
                            <Shadow Brush="#000000"
                                    Offset="0,3"
                                    Radius="6"
                                    Opacity="0.2" />
                        </Button.Shadow>
                        <VisualStateManager.VisualStateGroups>
                            <VisualStateGroup x:Name="CommonStates">
                                <VisualState x:Name="Normal" />
                                <VisualState x:Name="Pressed">
                                    <VisualState.Setters>
                                        <Setter Property="BackgroundColor" Value="White" />
                                        <Setter Property="Scale" Value="0.98" />
                                    </VisualState.Setters>
                                </VisualState>
                            </VisualStateGroup>
                        </VisualStateManager.VisualStateGroups>
                    </Button>

                    <Button Text="Relación con cuidador"
                            Style="{StaticResource MenuTileButtonStyle}"
                            Clicked="RelacionCuidador_Clicked">
                        <Button.Shadow>
                            <Shadow Brush="#000000"
                                    Offset="0,3"
                                    Radius="6"
                                    Opacity="0.2" />
                        </Button.Shadow>
                        <VisualStateManager.VisualStateGroups>
                            <VisualStateGroup x:Name="CommonStates">
                                <VisualState x:Name="Normal" />
                                <VisualState x:Name="Pressed">
                                    <VisualState.Setters>
                                        <Setter Property="BackgroundColor" Value="White" />
                                        <Setter Property="Scale" Value="0.98" />
                                    </VisualState.Setters>
                                </VisualState>
                            </VisualStateGroup>
                        </VisualStateManager.VisualStateGroups>
                    </Button>

                    <!-- Botón de Cerrar Sesión -->
                    <Button Text="Cerrar Sesión"
                            Style="{StaticResource LogoutButtonStyle}"
                            Clicked="CerrarSesion_Clicked">
                        <Button.Shadow>
                            <Shadow Brush="#000000"
                                    Offset="0,3"
                                    Radius="6"
                                    Opacity="0.2" />
                        </Button.Shadow>
                        <VisualStateManager.VisualStateGroups>
                            <VisualStateGroup x:Name="CommonStates">
                                <VisualState x:Name="Normal" />
                                <VisualState x:Name="Pressed">
                                    <VisualState.Setters>
                                        <Setter Property="BackgroundColor" Value="#ff4471" />
                                        <Setter Property="Scale" Value="0.98" />
                                    </VisualState.Setters>
                                </VisualState>
                            </VisualStateGroup>
                        </VisualStateManager.VisualStateGroups>
                    </Button>
                </VerticalStackLayout>
            </Frame>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>