<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TuApp.Vistas.RelacionCuidadorPage">

    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Inicio" Clicked="RegresarInicio_Clicked" />
    </ContentPage.ToolbarItems>
    <ContentPage.Background>
        <LinearGradientBrush EndPoint="1,1">
            <GradientStop Color="#5e1675" Offset="0.0" />
            <GradientStop Color="#9333ea" Offset="0.5" />
            <GradientStop Color="#3b0764" Offset="1.0" />
        </LinearGradientBrush>
    </ContentPage.Background>

    <VerticalStackLayout>
        
        <Label TextColor="White"
        FontSize="20"
        FontAttributes="Bold"
        HorizontalTextAlignment="Center"
        x:Name="lblCodigo" />

    </VerticalStackLayout>
</ContentPage>
