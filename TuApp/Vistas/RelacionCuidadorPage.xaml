<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TuApp.Vistas.RelacionCuidadorPage"
             BackgroundColor="Transparent"
             Title="Código de Relación">

    <ContentPage.Background>
        <LinearGradientBrush EndPoint="1,1">
            <GradientStop Color="#5e1675" Offset="0.0" />
            <GradientStop Color="#9333ea" Offset="0.5" />
            <GradientStop Color="#3b0764" Offset="1.0" />
        </LinearGradientBrush>
    </ContentPage.Background>

    <ScrollView>
        <VerticalStackLayout Padding="30" Spacing="40">

            <!-- Botón de Inicio -->
            <Button Text="Inicio"
                    Clicked="RegresarInicio_Clicked"
                    FontSize="32"
                    FontAttributes="Bold"
                    TextColor="White"
                    BackgroundColor="Transparent"
                    HorizontalOptions="Start"
                    Padding="0"
                    Margin="0,30,0,0" />

            <!-- Código mostrado en una tarjeta -->
            <Frame BackgroundColor="#8a4bcf"
                   BorderColor="White"
                   CornerRadius="20"
                   Padding="30"
                   HasShadow="True">
                <Label x:Name="lblCodigo"
                       Text="Aquí irá el código"
                       FontSize="30"
                       FontAttributes="Bold"
                       TextColor="White"
                       HorizontalTextAlignment="Center"
                       VerticalTextAlignment="Center" />
            </Frame>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
