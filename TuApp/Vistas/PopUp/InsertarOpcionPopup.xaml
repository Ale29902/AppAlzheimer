<?xml version="1.0" encoding="utf-8" ?>
<toolkit:Popup
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
    x:Class="TuApp.InsertarOpcionPopup"
    Size="300,250">

    <VerticalStackLayout Padding="20" Spacing="15">
        <Label Text="Agregar Opción" FontSize="20" HorizontalOptions="Center" />

        <Entry x:Name="descripcionEntry" Placeholder="Descripción de la opción" />

        <HorizontalStackLayout Spacing="10" VerticalOptions="Center">
            <Label Text="¿Es la respuesta correcta?" VerticalOptions="Center" />
            <CheckBox x:Name="condicionCheck"
              Color="#5e35b1"
              VerticalOptions="Center" />
        </HorizontalStackLayout>

        <Button Text="Guardar" Clicked="OnGuardarClicked" />
    </VerticalStackLayout>
</toolkit:Popup>