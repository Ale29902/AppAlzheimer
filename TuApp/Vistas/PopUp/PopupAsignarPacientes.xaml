<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TuApp.Vistas.PopUp.PopupAsignarPacientes">

    <VerticalStackLayout Spacing="10">
        <Label Text="Asignar pacientes al evento" FontAttributes="Bold" FontSize="20" />

        <CollectionView ItemsSource="{Binding PacientesCheckbox}">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <HorizontalStackLayout>
                        <CheckBox IsChecked="{Binding Seleccionado}" />
                        <Label Text="{Binding Usuario.Nombre}" VerticalOptions="Center" />
                    </HorizontalStackLayout>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

        <Button Text="Guardar asignaciones"
                Clicked="Guardar_Clicked"
                BackgroundColor="Green"
                TextColor="White" />
    </VerticalStackLayout>
</ContentView>
