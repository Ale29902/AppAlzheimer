<ContentPage 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="TuApp.MainMenuPage"
    BackgroundColor="#f5e0ff"
    Title="Menú">

    <VerticalStackLayout Padding="20" Spacing="20">
        <HorizontalStackLayout>
            <Image Source="perfil.png"
                   HeightRequest="50"
                   WidthRequest="50"
                   Aspect="AspectFill"
                   VerticalOptions="Center"/>
            <Label Text="John Smith"
                   VerticalOptions="Center"
                   FontAttributes="Bold"
                   Margin="10,0,0,0"/>
        </HorizontalStackLayout>

        <Button Text="Perfil" Clicked="Perfil_Clicked"/>
        <Button Text="Configuración" Clicked="Configuracion_Clicked"/>
        <Button Text="Cerrar sesión" TextColor="Red" Clicked="CerrarSesion_Clicked"/>
    </VerticalStackLayout>
</ContentPage>
