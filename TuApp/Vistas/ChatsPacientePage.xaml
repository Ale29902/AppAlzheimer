<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TuApp.Vistas.ChatsPacientePage"
             BackgroundColor="Transparent"
             NavigationPage.HasNavigationBar="False">
    <!-- Fondo degradado -->
    <ContentPage.Background>
        <LinearGradientBrush EndPoint="1,1">
            <GradientStop Color="#5e1675" Offset="0.0" />
            <GradientStop Color="#9333ea" Offset="0.5" />
            <GradientStop Color="#3b0764" Offset="1.0" />
        </LinearGradientBrush>
    </ContentPage.Background>

    <!-- Recursos y estilos -->
    <ContentPage.Resources>
        <ResourceDictionary>
            <Style x:Key="TitleLabelStyle" TargetType="Label">
                <Setter Property="FontSize" Value="28" />
                <Setter Property="FontAttributes" Value="Bold" />
                <Setter Property="TextColor" Value="White" />
                <Setter Property="HorizontalTextAlignment" Value="Center" />
                <Setter Property="Margin" Value="0,0,0,20" />
            </Style>
        </ResourceDictionary>
    </ContentPage.Resources>

    <ScrollView>
        <VerticalStackLayout Padding="30" Spacing="20" VerticalOptions="FillAndExpand">
            <!-- Botón de Inicio -->
            <Button Text="Inicio"
                    Clicked="RegresarInicio_Clicked"
                    TextColor="White"
                    BackgroundColor="Transparent"
                    FontSize="32"
                    FontAttributes="Bold"
                    HorizontalOptions="Start"
                    Margin="0,40,0,20"
                    Padding="0">
                <VisualStateManager.VisualStateGroups>
                    <VisualStateGroup x:Name="CommonStates">
                        <VisualState x:Name="Normal" />
                        <VisualState x:Name="Pressed">
                            <VisualState.Setters>
                                <Setter Property="Scale" Value="0.95" />
                                <Setter Property="Opacity" Value="0.8" />
                            </VisualState.Setters>
                        </VisualState>
                    </VisualStateGroup>
                </VisualStateManager.VisualStateGroups>
            </Button>

            <!-- Título -->
            <Label Text="Mensajes"
                   Style="{StaticResource TitleLabelStyle}" />

            <!-- Panel principal -->
            <Frame BackgroundColor="#4e186a"
                   CornerRadius="20"
                   Padding="20"
                   HasShadow="True"
                   Margin="0,10,0,20"
                   VerticalOptions="FillAndExpand">

                <!-- Contenido de mensajes -->
                <Grid RowDefinitions="Auto,*,Auto">
                    <!-- Indicador de carga -->
                    <ActivityIndicator Grid.Row="0" 
                                      IsRunning="{Binding IsLoading}"
                                      IsVisible="{Binding IsLoading}"
                                      Color="White"
                                      HorizontalOptions="Center"
                                      Margin="0,10" />

                    <!-- Lista de mensajes -->
                    <CollectionView Grid.Row="1"
                                   x:Name="MensajesCollectionView"
                                   ItemsSource="{Binding Mensajes}"
                                   SelectionMode="None"
                                   VerticalOptions="FillAndExpand">
                        <CollectionView.ItemTemplate>
                            <DataTemplate>
                                <Frame Padding="15"
                                      Margin="0,8"
                                      BackgroundColor="#e0cdff"
                                      BorderColor="Transparent"
                                      CornerRadius="15"
                                      HasShadow="True">
                                    <Frame.Shadow>
                                        <Shadow Brush="#000000"
                                               Offset="0,3"
                                               Radius="6"
                                               Opacity="0.2" />
                                    </Frame.Shadow>
                                    <Grid RowDefinitions="*,Auto">
                                        <Label Grid.Row="0"
                                              Text="{Binding Contenido}"
                                              FontSize="16"
                                              TextColor="#3b0764"
                                              LineBreakMode="WordWrap" />
                                        <Label Grid.Row="1"
                                              Text="{Binding FechaEnviado, StringFormat='{0:dd MMM yyyy HH:mm}'}"
                                              FontSize="12"
                                              TextColor="#666666"
                                              HorizontalTextAlignment="End"
                                              Margin="0,5,0,0" />
                                    </Grid>
                                    <VisualStateManager.VisualStateGroups>
                                        <VisualStateGroup x:Name="CommonStates">
                                            <VisualState x:Name="Normal" />
                                            <VisualState x:Name="Pressed">
                                                <VisualState.Setters>
                                                    <Setter Property="BackgroundColor" Value="#d0bdf5" />
                                                    <Setter Property="Scale" Value="0.98" />
                                                </VisualState.Setters>
                                            </VisualState>
                                        </VisualStateGroup>
                                    </VisualStateManager.VisualStateGroups>
                                </Frame>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                        <CollectionView.EmptyView>
                            <VerticalStackLayout HorizontalOptions="Center" VerticalOptions="Center" Padding="20">
                                <Image Source="mensaje_vacio.png" 
                                      HeightRequest="100" 
                                      WidthRequest="100"
                                      Opacity="0.7"
                                      HorizontalOptions="Center" />
                                <Label Text="No hay mensajes disponibles"
                                      FontSize="16"
                                      TextColor="White"
                                      HorizontalTextAlignment="Center"
                                      Margin="0,15,0,0" />
                            </VerticalStackLayout>
                        </CollectionView.EmptyView>
                    </CollectionView>

                    <!-- Mensaje de error -->
                    <Label Grid.Row="2"
                          Text="{Binding ErrorMessage}"
                          IsVisible="{Binding ErrorMessage, Converter={StaticResource StringNotEmptyConverter}}"
                          TextColor="#ff5e8a"
                          FontSize="14"
                          HorizontalTextAlignment="Center"
                          Margin="0,10,0,0" />
                </Grid>
            </Frame>

           
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>