<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:TuApp.VistasModelo"
             x:Class="TuApp.JuegosPaciente"
             BackgroundColor="{DynamicResource BasePageColor}">

    <ContentPage.BindingContext>
        <vm:JuegoViewModel />
    </ContentPage.BindingContext>

    <Grid RowDefinitions="Auto, *, Auto"
          Padding="20"
          BackgroundColor="{DynamicResource BaseTabbedPageColor}">

        <!-- Lista de juegos -->
        <CollectionView Grid.Row="1"
                        ItemsSource="{Binding ListaJuegosPaciente}"
                        SelectionMode="Single"
                        BackgroundColor="Transparent">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame Style="{StaticResource TileButtonStyle}">
                        <Frame.GestureRecognizers>
                            <TapGestureRecognizer Tapped="Juego_Tapped" CommandParameter="{Binding}" />
                        </Frame.GestureRecognizers>

                        <Grid ColumnDefinitions="*, Auto"
                              RowDefinitions="Auto, Auto"
                              ColumnSpacing="10"
                              RowSpacing="8"
                              VerticalOptions="Center">

                            <!-- Nombre del juego -->
                            <Label Grid.Row="0" Grid.Column="0"
                                   Text="{Binding nombre}"
                                   FontSize="18"
                                   FontAttributes="Bold"
                                   TextColor="{DynamicResource BaseTextColor}" />

                            <!-- Total de preguntas -->
                            <Label Grid.Row="1" Grid.Column="0"
                                   Text="{Binding numPreguntas, StringFormat='Preguntas: {0}'}"
                                   FontSize="14"
                                   TextColor="{DynamicResource BaseLightTextColor}" />

                        </Grid>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </Grid>
</ContentPage>
