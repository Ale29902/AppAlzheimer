<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:TuApp.VistasModelo"
             x:Class="TuApp.Vistas.JuegosCuidador"
             BackgroundColor="{DynamicResource BasePageColor}">

    <ContentPage.BindingContext>
        <vm:JuegoViewModel />
    </ContentPage.BindingContext>

    <Grid RowDefinitions="Auto, *, Auto" Padding="20" BackgroundColor="{DynamicResource BaseTabbedPageColor}">

        <!-- Lista de juegos -->
        <CollectionView Grid.Row="1"
                        ItemsSource="{Binding ListaJuegosCuidador}"
                        SelectionMode="Single">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame Style="{StaticResource TileButtonStyle}">
                        <Frame.GestureRecognizers>
                            <TapGestureRecognizer Tapped="Juego_Tapped" CommandParameter="{Binding}" />
                        </Frame.GestureRecognizers>

                        <Grid ColumnDefinitions="*, Auto"
                              RowDefinitions="Auto, Auto"
                              ColumnSpacing="10"
                              RowSpacing="8"
                              VerticalOptions="Center">

                            <!-- Nombre del juego -->
                            <Label Grid.Row="0" Grid.Column="0"
                                   Text="{Binding nombre}"
                                   FontSize="18"
                                   FontAttributes="Bold"
                                   TextColor="{DynamicResource BaseTextColor}" />

                            <!-- BotÃ³n de pacientes asignados -->
                            <Button Grid.Row="0" Grid.Column="1"
                                    Clicked="AbrirPacientesAsignados_Clicked"
                                    Text="Pacientes Asignados"
                                    Style="{StaticResource SecondaryButtonStyle}"
                                    CommandParameter="{Binding}" />

                            <!-- Total de preguntas -->
                            <Label Grid.Row="1" Grid.Column="0"
                                   Text="{Binding numPreguntas, StringFormat='Preguntas: {0}'}"
                                   FontSize="14"
                                   TextColor="{DynamicResource BaseLightTextColor}" />

                        </Grid>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
        <Button Text="+"
        FontSize="36"
        Padding="0"
        FontAttributes="Bold"
        Clicked="AgregarJuego_Clicked"
        WidthRequest="60"
        HeightRequest="60"
        CornerRadius="30"
        BackgroundColor="{DynamicResource PrimaryColor}"
        TextColor="{DynamicResource White}"
        HorizontalOptions="Center"
        VerticalOptions="End"
        Grid.Row="2"
        Margin="0,10">
            <Button.Shadow>
                <Shadow Brush="#55000000"
                Offset="0,4"
                Radius="8"
                Opacity="0.4" />
            </Button.Shadow>
        </Button>






    </Grid>
</ContentPage>
