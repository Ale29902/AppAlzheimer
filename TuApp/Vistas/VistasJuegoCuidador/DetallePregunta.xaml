<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TuApp.Vistas.DetallePregunta"
             x:Name="rootPage">

    <Grid RowDefinitions="Auto,*,Auto" Padding="20" RowSpacing="10">

        <!-- Encabezado -->
        <StackLayout Grid.Row="0" Spacing="6">
            <Label Text="{Binding Descripcion}"
                   FontSize="18"
                   FontAttributes="Bold"
                   TextColor="Black" />

            <Image x:Name="imagenPregunta"
                   Source="{Binding ImagenSource}"
                   HeightRequest="150"
                   Aspect="AspectFit" />

            <Button x:Name="btnSubirImagen"
                Text="Subir Imagen"
                    Clicked="OnSubirImagenClicked"
                    FontSize="14"
                    Padding="8"
                    BackgroundColor="#673ab7"
                    TextColor="White"
                    CornerRadius="10"
                    HorizontalOptions="Fill" />
        </StackLayout>

        <!-- Lista de opciones (sin HeightRequest para que no tape el botón) -->
        <CollectionView Grid.Row="1"
                        ItemsSource="{Binding opciones}">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame BackgroundColor="White"
                           CornerRadius="20"
                           Padding="15"
                           Margin="0,10"
                           BorderColor="#E0E0E0">

                        <Grid ColumnDefinitions="*,Auto,Auto"
                              VerticalOptions="Center">

                            <Label Grid.Column="0"
                                   Text="{Binding Descripcion}"
                                   FontSize="16"
                                   TextColor="Black"
                                   VerticalOptions="Center" />

                            <BoxView Grid.Column="1"
                                 WidthRequest="20"
                                 HeightRequest="20"
                                 CornerRadius="10"
                                 VerticalOptions="Center"
                                 HorizontalOptions="Center"
                                 Margin="10,0"
                                 Color="Gray">
                                <!-- color por defecto -->

                                <BoxView.Triggers>
                                    <DataTrigger TargetType="BoxView"
                                         Binding="{Binding Condicion}"
                                         Value="True">
                                        <Setter Property="Color" Value="Green" />
                                    </DataTrigger>

                                    <DataTrigger TargetType="BoxView"
                                         Binding="{Binding Condicion}"
                                         Value="False">
                                        <Setter Property="Color" Value="Red" />
                                    </DataTrigger>
                                </BoxView.Triggers>
                            </BoxView>

                            <Button Grid.Column="2"
                                Text="🗑️"
                                FontSize="20"
                                BackgroundColor="Transparent"
                                TextColor="Red"
                                Padding="0"
                                CommandParameter="{Binding .}"
                                Clicked="EliminarOpcion_Clicked"
                                VerticalOptions="Center"
                                HorizontalOptions="Center"
                                IsVisible="{Binding Source={x:Reference rootPage}, Path=MostrarBotonEliminar}" />

                        </Grid>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

        <!-- Botones alineados horizontalmente -->
        <HorizontalStackLayout Grid.Row="2"
                               Spacing="20"
                               HorizontalOptions="Center"
                               Padding="0,10,0,0">

            <Button x:Name="btnAgregar"
                Text="+" FontSize="24"
                    WidthRequest="50"
                    HeightRequest="50"
                    Clicked="AgregarOpcion_Clicked"
                    BackgroundColor="#673ab7"
                    TextColor="White"
                    CornerRadius="25" />

            <Button x:Name="btnGuardar"
                    Text="Guardar"
                    FontSize="16"
                    Clicked="OnGuardarClicked"
                    BackgroundColor="#4CAF50"
                    TextColor="White"
                    CornerRadius="12"
                    Padding="20,8" />
        </HorizontalStackLayout>

    </Grid>
</ContentPage>
