<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TuApp.Vistas.DetallePregunta"
             x:Name="rootPage"
             BackgroundColor="{DynamicResource BasePageColor}">

    <Grid RowDefinitions="Auto,*,Auto"
          Padding="20"
          RowSpacing="10"
          BackgroundColor="{DynamicResource BaseTabbedPageColor}">

        <!-- Encabezado -->
        <StackLayout Grid.Row="0" Spacing="6">
            <Label Text="{Binding Descripcion}"
                   FontSize="18"
                   FontAttributes="Bold"
                   TextColor="{DynamicResource BaseTextColor}" />

            <Image x:Name="imagenPregunta"
                   Source="{Binding ImagenSource}"
                   HeightRequest="150"
                   Aspect="AspectFit" />

            <Button x:Name="btnSubirImagen"
                    Text="Subir Imagen"
                    Clicked="OnSubirImagenClicked"
                    Style="{StaticResource SecondaryButtonStyle}"
                    HorizontalOptions="Fill" />
        </StackLayout>

        <!-- Lista de opciones -->
        <CollectionView Grid.Row="1"
                        ItemsSource="{Binding opciones}">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame Style="{StaticResource TileButtonStyle}">
                        <Grid ColumnDefinitions="*,Auto,Auto"
                              VerticalOptions="Center">

                            <Label Grid.Column="0"
                                   Text="{Binding Descripcion}"
                                   FontSize="16"
                                   TextColor="{DynamicResource BaseTextColor}"
                                   VerticalOptions="Center" />

                            <BoxView Grid.Column="1"
                                     WidthRequest="20"
                                     HeightRequest="20"
                                     CornerRadius="10"
                                     VerticalOptions="Center"
                                     HorizontalOptions="Center"
                                     Margin="10,0"
                                     Color="{DynamicResource Gray400}">
                                <BoxView.Triggers>
                                    <DataTrigger TargetType="BoxView"
                                                 Binding="{Binding Condicion}"
                                                 Value="True">
                                        <Setter Property="Color" Value="{DynamicResource OkColor}" />
                                    </DataTrigger>

                                    <DataTrigger TargetType="BoxView"
                                                 Binding="{Binding Condicion}"
                                                 Value="False">
                                        <Setter Property="Color" Value="{DynamicResource ErrorColor}" />
                                    </DataTrigger>
                                </BoxView.Triggers>
                            </BoxView>

                            <Button Grid.Column="2"
                                    Text="🗑️"
                                    FontSize="20"
                                    BackgroundColor="Transparent"
                                    TextColor="{DynamicResource ErrorColor}"
                                    Padding="0"
                                    CommandParameter="{Binding .}"
                                    Clicked="EliminarOpcion_Clicked"
                                    VerticalOptions="Center"
                                    HorizontalOptions="Center"
                                    IsVisible="{Binding Source={x:Reference rootPage}, Path=MostrarBotonEliminar}" />
                        </Grid>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

        <!-- Botones alineados horizontalmente -->
        <HorizontalStackLayout Grid.Row="2"
                               Spacing="20"
                               HorizontalOptions="Center"
                               Padding="0,10,0,0">

            <Button x:Name="btnAgregar"
                    Text="+"
                    FontSize="28"
                    FontAttributes="Bold"
                    Padding="0"
                    WidthRequest="60"
                    HeightRequest="60"
                    CornerRadius="30"
                    Clicked="AgregarOpcion_Clicked"
                    BackgroundColor="{DynamicResource PrimaryColor}"
                    TextColor="{DynamicResource White}">
                <Button.Shadow>
                    <Shadow Brush="#55000000"
                            Offset="0,4"
                            Radius="8"
                            Opacity="0.4" />
                </Button.Shadow>
            </Button>

            <Button x:Name="btnGuardar"
                    Text="Guardar"
                    Style="{StaticResource PrimaryButtonStyle}"
                    Clicked="OnGuardarClicked" />
        </HorizontalStackLayout>

    </Grid>
</ContentPage>
