<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TuApp.Vistas.VistasJuegoCuidador.PacientesJuego"
             Title="PacientesJuego">

    <Grid RowDefinitions="*, Auto" Padding="20">

        <!-- Contenido scrollable -->
        <VerticalStackLayout Grid.Row="0">
            <Label Text="Pacientes Asignados:"
                   FontAttributes="Bold"
                   FontSize="18"
                   Margin="0,10,0,5"
                   TextColor="Black" />

            <CollectionView ItemsSource="{Binding pacientes}" Margin="0,0,0,20">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame BackgroundColor="#f3e5f5"
                               BorderColor="#b39ddb"
                               CornerRadius="12"
                               Padding="10"
                               Margin="5,5,5,0">
                            <Grid ColumnDefinitions="*, Auto" VerticalOptions="Center">
                                <!-- Nombre del paciente -->
                                <Label Grid.Column="0"
                                   Text="{Binding nombre}"
                                   FontSize="16"
                                   TextColor="#4a148c"
                                   VerticalOptions="Center" />

                                <Button Grid.Column="1"
                                    Text="PUNTAJES"
                                    FontSize="12"
                                    Padding="10,2"
                                    BackgroundColor="#7E57C2"
                                    TextColor="White"
                                    CornerRadius="16"
                                    VerticalOptions="Center"
                                    Clicked="VerPuntajes_Clicked"
                                    CommandParameter="{Binding .}" />

                            </Grid>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </VerticalStackLayout>

        <!-- BotÃ³n fijo abajo -->
        <Button Text="+" 
                Grid.Row="1"
                FontSize="28"
                WidthRequest="60"
                HeightRequest="60"
                BackgroundColor="#7E57C2"
                TextColor="White"
                CornerRadius="30"
                HorizontalOptions="Center"
                VerticalOptions="End"
                Clicked="AgregarPaciente_Clicked" />
    </Grid>
</ContentPage>
